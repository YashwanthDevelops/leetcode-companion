{
    "manifest_version": 3,
    "name": "LeetCode Companion",
    "version": "2.0",
    "description": "AI-powered LeetCode companion with spaced repetition and dashboard analytics.",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "https://leetcode.com/*",
        "https://*.railway.app/*",
        "http://localhost:8000/*"
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://leetcode.com/problems/*"
            ],
            "js": [
                "content-scripts/leetcode-scraper.js"
            ]
        }
    ]
}